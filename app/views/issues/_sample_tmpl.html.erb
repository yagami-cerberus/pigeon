<%= fields_for form_prefix, object do |f| %>
<tr data-role="sample" data-index="<%= form_prefix %>" class="<%="success new" unless f.object.id.present? %>">
    <td>
      <%=f.hidden_field :id %>
      <%=f.hidden_field :_destroy, :'data-role' => 'destroy-flag' %>
      <%=f.text_field :no, :class => 'form-control input-sm'%>
    </td>
    <td><%=f.text_field :sample_type, :class => 'form-control input-sm'%></td>
    <td><%=f.number_field :quantity, :class => 'form-control input-sm'%></td>
    <td>
      <button type="button" data-role="delete" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> Delete</button>
      <% if f.object.id.present? %>
        <button type="button" data-role="restore" class="btn btn-sm btn-success" style="display: none"><i class="fa fa-share"></i> Restore</button>
      <% end %>
    </td>
</tr>
<% end %>