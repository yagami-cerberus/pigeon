<h3><%= t(:'nav.system.inspection_bundles') %></h3>
<hr />
<div class="record-filter">
  <div class="record-filter-toolbar">
    <div class="btn-group">
      <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown">
        <span class="glyphicon glyphicon-wrench"></span>
        Tools <span class="caret"></span>
      </button>
      <ul class="dropdown-menu dropdown-menu-shift" role="menu">
        <li><a href="<%= new_settings_inspection_bundle_path(:refer => request.fullpath) %>">Create</a></li>
      </ul>
    </div>
  </div>
  <%= render 'layouts/filters/inspection_bundle' %>
</div>
<div class="record-table">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <td>Title</td><td>Group</td><td>Code</td><td>Catalogs</td><td></td></tr>
    </thead>
    <tbody>
      <% @bundles.each do |c| %>
      <tr>
        <td><%= c.title %></td>
        <td><%= c.group_name %></td>
        <td><%= c.inspection_items.pluck(:title).join('/') %></td>
        <td></td>
        <td>
          <%= link_to 'Edit', edit_settings_inspection_bundle_path(c, :refer => request.fullpath) %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="record-pagination">
  <%= render 'layouts/pagination/pager', :current_page => @current_page, :page_size => @page_size, :input => '' %>
</div>
