<h1><%= t :'inspection.edit'%></h1>
<hr />

<div class='container'>
  <%= form_for [:settings, @item], url: {action: 'update'}, html: {class: 'form-horizontal', role: 'form'} do |f| %>
    <%= hidden_field_tag :refer, params[:refer] %>
    <%= render 'settings/inspection_item/editor', :f => f %>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-4">
        <button type='submit' class='btn btn-sm btn-primary'>Save</button>
      </div>
    </div>
  <% end %>
</div>