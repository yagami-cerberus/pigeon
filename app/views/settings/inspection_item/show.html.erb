<h3>Inspection Catalog <%=@item.title %></h3>
<hr />
<div class="record-filter">
  <div class="record-filter-toolbar">
    <a href="<%= new_settings_inspection_item_inspection_atom_path(@item)%>" class="btn btn-success btn-sm">
      Create Item
    </a>
  </div>
  <div class="clearfix"></div>
</div>
<div class="record-table">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Title</th><th>Type</th><th>Describe</th><th> </th>
      </tr>
    </thead>
    <tbody>
      <% @item.inspection_atoms.each do |c| %>
      <tr>
        <td><%= c.title %></td>
        <td><%= c.data_type %></td>
        <td><%= c.type_handler.describe %></td>
        <td>
          <%= link_to 'Edit', edit_settings_inspection_item_inspection_atom_path(@item, c) %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>