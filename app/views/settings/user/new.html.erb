<h1><%= t :'user.create_user'%></h1>
<hr />

<%= form_for [:settings, @user], url: {action: 'create'}, html: {class: 'form-horizontal', role: 'form'} do |f| %>
  <div class="form-group">
    <%= f.label :username, 'Username', class: 'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= f.text_field :username, :class => 'form-control input-sm' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-6">
      <%= render 'settings/user/password', :f => f %>
    </div>
  </div>
  <%= render 'settings/user/editor', :f => f %>
  <button type='submit' class='btn btn-sm btn-success'>
    Create
  </button>
<% end %>
