<h1><%= t :'nav.system.group'%></h1>
<hr />
<div class="record-filter">
  <%=form_for @new_group, url: {action: 'create'}, html: {class: 'form-inline', role: 'form'} do |f| %>
    <%= f.text_field :name, :class => 'form-control input-sm', :placeholder => 'New Group Name' %>
    <button class="btn btn-sm btn-success">
      <i class="fa fa-plus"></i> Create Group
    </button>
      <% end %>
</div>
<div class="record-table">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <td>
          Group Name
        </td>
        <td>
          Users
        </td>
        <td></td></tr>
    </thead>
    <tbody>
      <% @groups.each do |g| %>
      <tr>
        <td><%= g.name %></td>
        <td></td>
        <td>
          <%= link_to 'Edit', edit_settings_group_path(g, :refer => request.fullpath) %> |
          <%= link_to 'Delete', [:settings, g], :method => :delete, :data => {:confirm => 'Are you sure?'} %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
