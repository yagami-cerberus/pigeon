<form class="form-inline" data-form="filters" role="form">
  <div class="form-group">
    <%= select :filter, :b, InspectionBundle.all.map {|b| ["[#{b.code}] #{b.title}", b.id]}, {} %>
  </div>
  <div class="form-group">
    <%= select :filter, :s, IssueStatus.all.map {|s| ["#{s.name}", s.id]}, {} %>
  </div>
  <button class='btn btn-default btn-sm' type='submit'>
    <%= t(:'shared.search')%>
  </button>
</form>
<script type="text/javascript">
$("#filter_b").select2({width: "300px"});
$("#filter_s").select2({width: "120px"});
</script>