<form class="form-inline" data-form="filters" role="form">
  <div class="form-group">
    <%= select :filter, :b, InspectionBundle.all.pluck(:code, :title, :id).map { |b| ["[#{b[0]}] #{b[1]}", b[2]] }, {}, {:class => 'form-control input-sm'} %>
  </div>
  <div class="form-group">
    <%= select :filter, :s, IssueStatus.all.pluck(:name, :id), {}, {:class => 'form-control input-sm'} %>
  </div>
  <button class='btn btn-default btn-sm' type='submit'>
    <%= t(:'shared.search')%>
  </button>
</form>
<script type="text/javascript">
$("#filter_b").select2({width: "300px"});
$("#filter_s").select2({width: "120px"});
</script>