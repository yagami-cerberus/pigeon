<% if claims.guest? %>
  <li><a href="<%= login_path %>"><%= t :'security.login' %></a></li>
<% else %>
<%= form_tag(logout_path, method: "POST", style: 'display: none', id: 'logout_form') do %>
<% end %>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      <i class="fa fa-user"></i> <%= claims.name %> <b class="caret"></b>
    </a>
    <ul class="dropdown-menu sb-admin-patch">
      <li class="dropdown-header"><%= t 'nav.account.catalog' %></li>
      <% if claims.superuser? %>
      <% else %>
      <li><a href="<%= my_profile_path %>"><i class="fa fa-fw fa-user"></i> <%= t 'nav.account.profile' %></a></li>
      <% end %>
      <li><a href="<%= change_password_path %>"><i class="fa fa-fw fa-key"></i> <%= t 'nav.account.change_passwd' %></a></li>
      <li class="divider"></li>
      <li>
        <a href="javascript:document.getElementById('logout_form').submit()">
          <i class="fa fa-sign-out"></i> <%= t :'security.logout' %>
        </a>
      </li>
    </ul>
  </li>
<% end %>

