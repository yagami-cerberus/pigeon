<div class="text-center login-panel">
  <h2>Login</h2>
  <hr />
  <%= form_tag('', method: "POST", class: '', role: 'form') do %>
    <div class="form-group">
      <%= t @error if @error%>
    </div>
    <div class="form-group">
      <%= text_field_tag :username, params[:username], class: 'form-control', placeholder: 'Username' %>
    </div>
    <div class="form-group">
      <%= password_field_tag :password, '', class: 'form-control', placeholder: 'Password' %>
    </div>
    <div class="form-group">
      <%= submit_tag "Login", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>