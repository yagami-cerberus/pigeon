<h3>Change Password</h3>
<hr />
<%= form_tag(change_password_path, method: 'POST', class: 'form-horizontal') do %>
<% if @error %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4 form-control-static"><%= t @error %></div>
  </div>
<% end %>
  <div class="form-group">
    <label class="col-sm-2 control-label">Username</label>
    <div class="col-sm-4 form-control-static"><%= claims.identify %></div>
  </div>
  <div class="form-group">
    <%= label_tag :old_password, 'Old password', class: 'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= password_field_tag :old_password, '', class: 'form-control', placeholder: 'Old Password' %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :new_password, 'New password', class: 'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= password_field_tag :new_password, '', class: 'form-control', placeholder: 'New Password' %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :confirm_new_password, 'Confirm new password', class: 'col-sm-2 control-label' %>
    <div class="col-sm-4">
      <%= password_field_tag :confirm_new_password, '', class: 'form-control', placeholder: 'Confirm new password' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2">
      <%= submit_tag "Change password", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
